// Modulo para sumar

module subtract #(parameter N = 4)
				  (
				  input logic [N-1:0] a, b,
				  output logic [N-1:0] s, 
				  output logic Ne, Ze, Ca, Ov
				  );
					
	logic cout;
	
	assign {cout, s} = a + b;
	
	// Setear Flags
	assign Ne = s[N-1]; // N
	
	assign Ze = !s; // Z
	
	assign Ca = cout; // C
	
	assign Ov = (a[N-1] & b[N-1] & !s[N-1]) | (!a[N-1] & !b[N-1] & s[N-1]); // O
	
	
endmodule